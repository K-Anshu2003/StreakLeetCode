// Largest perimeter triangle
class Solution {
    public int largestPerimeter(int[] nums) {
        Arrays.sort(nums);
        int n = nums.length;
        int maxParameter = 0;
        for(int i=n-1; i>=2; i--){ 
            int a = nums[i], b = nums[i-1], c = nums[i-2];
            if(b+c > a){
                maxParameter = Math.max(maxParameter,a+b+c);
            }   
        }
        return maxParameter;
    }
}
